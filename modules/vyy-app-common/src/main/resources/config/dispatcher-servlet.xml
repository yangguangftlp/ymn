		</list> </property> </bean> -->
	<bean
		class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" />
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<bean class="com.vyiyun.weixin.interceptor.RequestParametersInterceptor" />
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/mobile/**" />
			<bean class="com.vyiyun.common.weixin.interceptor.OAuth2Interceptor" />
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/mobile/**" />
			<bean class="com.vyiyun.common.weixin.interceptor.AppPackageInterceptor" />
		</mvc:interceptor>
		<mvc:interceptor>
