<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//LOGGER" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	<appender name="app_common-sql" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="logs/vyy-app-common/app_common-sql.log" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c %x - %m%n" />
		</layout>
	</appender>
	<appender name="app_common" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="logs/vyy-app-common/app_common.log" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c %x - %m%n" />
		</layout>
	</appender>
	<logger name="com.vyiyun" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="app_common" />
		<appender-ref ref="console" />
	</logger>
	<logger name="com.ibatis" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="app_common-sql" />
	</logger>

	<logger name="java.sql.Connection" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="app_common-sql" />
	</logger>

	<logger name="java.sql.Statement" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="app_common-sql" />
	</logger>
	<logger name="java.sql.PreparedStatement" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="app_common-sql" />
	</logger>
	<logger name="java.sql.ResultSet" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="app_common-sql" />
	</logger>
	<!-- Root Logger -->
	<root>
		<level value="DEBUG" />
		<appender-ref ref="console" />
	</root>
</log4j:configuration>
